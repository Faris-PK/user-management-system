<%-include('../layouts/header.ejs')%>
<div class="limiter">
    <div class="container-login100" style="background-image: url('assets/user/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" method="post" action="/logout">
                <span class="login100-form-title p-b-49">
                    Welcome <%= username %>
                </span>
                <% if (messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> <%= messages.success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                <div class="user-details text-center">
                    <!-- <h4>About You</h4> -->
                    <div class="profile-icon">
                        <!-- Use Font Awesome or any other icon library -->
                        <i class="fas fa-user-circle fa-3x"></i> <!-- Adjust the icon class as needed -->
                    </div>
                    <ul>
                        <li><strong>Name:</strong> <%= username %></li>
                        <li><strong>Email:</strong> <%= email %></li>
                        <li><strong>Mobile:</strong> <%= mobile %></li>
                        <!-- Add more user details as needed -->
                    </ul>
                </div>
            </form>
            <div class="container-login100-form-btn mt-5">
                <div class="wrap-login100-form-btn">
                    <div class="login100-form-bgbtn"></div>
                    <a href="/logout" class="login100-form-btn" type="submit">
                        Logout
                    </a>
                </div>
            </div>
            <div class="container-login100-form-btn mt-3">
                <div class="wrap-login100-form-btn">
                    <div class="login100-form-bgbtn"></div>
                    <a href="/editProfile" class="login100-form-btn">
                        Edit Profile
                    </a>
                </div>
            </div>
            
        </div>
    </div>
</div>



<!-- Include Font Awesome via CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">



<%-include('../layouts/footer.ejs')%>
